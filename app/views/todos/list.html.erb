<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>No Completados</h1>
      <% @todos.each do |todo| %>
        <% if !todo.completed? %>
          <p><%= todo.description %></p>
          <% end %>
        <% end %>
    </div>

    <div class="col-md-6">
      <h1> Completados</h1>
      <% @todos.each do |todo| %>
        <% if todo.completed? %>
          <p><%= todo.description %></p>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
