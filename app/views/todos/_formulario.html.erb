<div class="container">
  <h1>ToDo List</h1>
    <div class="mi_form">
      <%= form_with(model: @todo, local: true) do |form| %>
        <% if @todo.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@todo.errors.count, "error") %>
              error al crear:
            </h2>
            <ul>
              <% @todo.errors.full_massages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        
        <% end %>

        <div class="form-group">
          <fieldset>
            <%= form.label :description %>
            <%= form.text_field :description, class: "form-control", placeholder: "Ingrese descripción" %>
          </fieldset>
        </div>

    <div class="form-group">
          <fieldset>
            <%= form.label :completed %>
            <%= form.check_box :completed, class: "form-control" %>
          </fieldset>
        </div>

        <div class="form-group">
          <fieldset>
            <%= form.submit 'Guardar'%>
          </fieldset>
        </div>
      <% end %>
    </div>
   </div>
</div>
